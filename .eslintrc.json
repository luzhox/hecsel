{
  "env": {
    "jest": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:wordpress/recommended"],
  "plugins": ["wordpress"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      "error",
      { "code": 200, "tabWidth": 2, "ignoreTrailingComments": true }
    ], // máximo de largo de líneas
    "wordpress/space-negation-operator": 2,
    "indent": ["error", 2],
    "phpcs.enable": true,
    "phpcs.executablePath": "./vendor/bin/phpcs",
    "phpcs.standard": "WordPress"
  }
}
